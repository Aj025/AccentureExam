    <!-- Edit Text -->
    <style name="AppBaseEditText" parent="AppFontP4.Normal">
        <item name="android:textColor">@color/appEditTextFontColor</item>
        <item name="android:textColorHint">@color/appEditTextColorHint</item>
        <item name="android:layout_height">@dimen/edit_text_primary_height</item>
        <item name="android:paddingStart">16dp</item>
         <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="AppEditTextPrimary" parent="AppBaseEditText">
        <item name="android:background">@drawable/bg_edit_text_primary</item>
    </style>

    <style name="AppEditTextSecondary" parent="AppBaseEditText">
        <item name="android:background">@drawable/bg_edit_text_secondary</item>
    </style>

    <!-- Button -->
    <style name="AppButtonPrimary" parent="AppFontH4.Offset">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_primary_height</item>
        <item name="android:background">@drawable/button_primary_state</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppButtonSecondary" parent="AppFontH3.Normal">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_primary_height</item>
        <item name="android:background">@drawable/button_secondary_state</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppButtonSmall" parent="AppFontH5.Offset">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_small_height</item>
        <item name="android:background">@drawable/button_small_state</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- Text Prefix -->
    <style name="AppPrefix" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textColor">@color/coloTextHint</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>