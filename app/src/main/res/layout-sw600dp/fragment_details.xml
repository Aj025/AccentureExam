<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        style="@style/AppFontP3.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:text="Name" />

    <TextView
        android:id="@+id/tv_cityCode"
        style="@style/AppFontP3.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:text="CityCode" />

    <TextView
        android:id="@+id/tv_cityName"
        style="@style/AppFontP3.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:text="CityName" />

    <TextView
        android:id="@+id/tv_timeZoneName"
        style="@style/AppFontP3.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:text="TimeZoneName" />

    <TextView
        android:id="@+id/tv_countryCode"
        style="@style/AppFontP3.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:text="CountryCode" />

    <TextView
        android:id="@+id/tv_countryName"
        style="@style/AppFontP3.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:text="CountryName" />

    <Button
        android:id="@+id/btn_back"
        style="@style/AppButtonSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="@string/back" />


    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:constraint_referenced_ids="tv_cityCode,tv_name,tv_countryName,tv_timeZoneName,tv_cityName,tv_countryCode,btn_back"
        app:flow_firstVerticalBias="0"
        app:flow_verticalGap="20dp"
        app:flow_verticalStyle="packed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>